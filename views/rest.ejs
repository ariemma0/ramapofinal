   <div class="row">
	  <div class="small-12 medium-8 large-7 columns"> 
       <form id = 'refresh_form' action="start" method ="post">  
         <div id="filter" class="row">
	        <div class="large-offset-3 large-7 medium-offset-1 medium-8 small-9 columns" >  	
               <span id="tooltipc1"> <span class="search" id="searchcuisine">Cuisine&#9662;</span> 
                     <span id="tool1" ><select onchange="searchchanged()" id="box1" name="box1" multiple="multiple">
                           <option value="*"  <% if (data[data.length-2].cuisine[0] == "1" ){ %> selected <% }%>  >---  All  ---</option>
                           <option value="0"  <% if (data[data.length-2].cuisine[1] == "1" ){ %> selected <% }%>  >Chinese</option>
                           <option value="1"  <% if (data[data.length-2].cuisine[2] == "1" ){ %> selected <% }%>  >Italian</option>
                           <option value="2"  <% if (data[data.length-2].cuisine[3] == "1" ){ %> selected <% }%> >Pizzeria</option>
                           <option value="3"  <% if (data[data.length-2].cuisine[4] == "1" ){ %> selected <% }%> >Seafood</option>
                           <option value="4"  <% if (data[data.length-2].cuisine[5] == "1" ){ %> selected <% }%> >Bar and Grill</option>
                           <option value="5"  <% if (data[data.length-2].cuisine[6] == "1" ){ %> selected <% }%> >Casual</option>
                           <option value="6"  <% if (data[data.length-2].cuisine[7] == "1" ){ %> selected <% }%> >Steak House</option>
                           <option value="7"  <% if (data[data.length-2].cuisine[8] == "1" ){ %> selected <% }%> >Fine dining</option>
                           <option value="8"  <% if (data[data.length-2].cuisine[9] == "1" ){ %> selected <% }%> >Take out</option>
                    </select></span></span> 
             
               <span id="tooltipc2"> <span  class="search" id="searchregion">Region&#9662;</span>  
                     <span id="tool2" ><select id="box2" name="box2" onchange="searchchanged()" size="7">
                           <option value="*" <% if (data[data.length-2].region == "*" ){ %> selected <% }%> >---  All  ---</option>
                           <option value="0" <% if (data[data.length-2].region == "0" ){ %> selected <% }%>>Local</option>
                           <option value="1" <% if (data[data.length-2].region == "1" ){ %> selected <% }%>>Jersey Shore</option>
                           <option value="2" <% if (data[data.length-2].region == "2" ){ %> selected <% }%>>New York City</option>
                           <option value="3" <% if (data[data.length-2].region == "3" ){ %> selected <% }%>>Hudson Valley</option>
                           <option value="4" <% if (data[data.length-2].region == "4" ){ %> selected <% }%>>Morris</option>
                           <option value="5" <% if (data[data.length-2].region == "5" ){ %> selected <% }%>>Meadowlands</option>
                    </select></span></span> 
                      
               <span id="tooltipc3"> <span  class="search" id="searchrange">Range&#9662;</span>
                           <span id="tool3" ><select id="box3" name="box3" onchange="searchchanged()" size="5">
							   
                           <option value="999" <% if (data[data.length-2].range == "999" ){ %> selected <% }%>>--  All  --</option>
                           <option value="5"   <% if (data[data.length-2].range == "5"   ){ %> selected <% }%>>5 miles</option>
                           <option value="10"  <% if (data[data.length-2].range == "10"  ){ %> selected <% }%>>10 miles</option>
                           <option value="20"  <% if (data[data.length-2].range == "20"  ){ %> selected <% }%>>20 miles</option>
                           <option value="50"  <% if (data[data.length-2].range == "50"  ){ %> selected <% }%>>50 miles</option>
                    </select></span></span> 
                           
            </div>	
