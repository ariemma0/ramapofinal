   <section id='main_select'>
        <div class="top">
            
        <div class="row">
          
            
                <ul style="list-style-type:none">
					<% for ( my in data.slice(0, (data.length-2)) ) { %>
                   <li id="myline<%= my%>">
                   	   <div class="topline">
				   <div class="large-5 medium-5 small-5 columns padx">  		   
						  <span id='my_dbid<%= my%>' style="display: none;"><%= data[my].rdbid%></span>
                          <span id='my_namex<%=my%>'><a href="<%= data[my].rwebaddr%>" target='_blank' id='anchorname<%=my%>'><span class="restname" id='my_name<%=my%>'><%= data[my].rname%></span></span></a> 
                          <span id='my_menu<%=my%>'><a href="<%= data[my].rmenu%>" target='_blank' id='anchormenu<%=my%>' ><img src='menu.png' class="menu" title='Menu' alt='menu' width="19" height="19"></span></a>
                          <span id='my_yelp<%=my%>'><a href="<%= data[my].ryelp%>" target='_blank' id='anchoryelp<%=my%>'><img src='yelp.png'  class="yelp" title='Yelp' alt='yelp' ></span></a>
                  	    </div><div class="large-5 medium-5 small-5 columns padx">   
					      <span class="phone padx" id='my_phone<%= my%>'><%= data[my].rphone%></span>
                
					      <span class="dist padx" id='my_distance<%= my%>' data-numb="<%=my%>" ><%= data[my].rdistance%></span>
					      <span class="dist padx" id='my_time<%= my%>' data-numb="<%=my%>" ></span>
				        	    </div><div class="large-2 medium-2 small-2 columns padx"> 
                          <span id='my_detailbutton<%=my%>'>                            <img class='button_detail' src='buttonmore.png'    data-numb="<%=my%>"  title='Details' alt='details'></span>
                          <span id='my_updatebutton<%=my%>'>                            <img class='button_update' src='buttonupdate.png'  data-numb="<%=my%>" title='Update' alt='update'></span>
                          <span id='my_deletebutton<%=my%>'>                            <img class='button_delete' src='buttondelete.png'  data-numb="<%=my%>" title='Click - Remove&#13DblClick - Delete' alt='delete'></span>   
                          </div>
                    </div>  
                   
                       <div id="moreline<%=my%>" class="moreline" hidden>
                      <div class="small-offset-3 small-9 columns">  
                          <span id='my_addr<%=my%>'><%= data[my].raddr%></span>
                      
                          <span id='my_town<%=my%>'><%= data[my].rtown%></span> 
                      
                          <span id='my_state<%=my%>'><%= data[my].rstate%></span> 
                        </div><div class="small-offset-3 small-9 columns">     
                          <span id='my_comment<%=my%>'><%= data[my].rcomment%></span> 
                          <span class='maplocation' id='my_position<%= my%>' hidden data-numb="<%=my%>" ><%= data[my].rposition%></span>
                          <span  id='my_region<%= my%>' hidden data-numb="<%= data[my].rregion%>" ></span>
                                              
                          <span  id='my_cuisine<%= my%>' hidden data-numb="<%= data[my].rcuisine%>" ></span>
                      </div>   
                       </div>  <hr /> 
                                	  
                   </li><% } %>
               </ul>     
            
        
    </section>

